<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_debug"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:keepScreenOn="true"
    tools:context="net.maxbraun.lights.DebugActivity">

  <Button
      android:id="@+id/all_white"
      android:layout_width="200dp"
      android:layout_height="100dp"
      android:layout_centerInParent="true"
      android:onClick="allWhite"
      android:text="@string/all_white"/>

  <Button
      android:id="@+id/all_off"
      android:layout_width="200dp"
      android:layout_height="100dp"
      android:layout_below="@id/all_white"
      android:layout_centerInParent="true"
      android:onClick="allOff"
      android:text="@string/all_off"/>
</RelativeLayout>
